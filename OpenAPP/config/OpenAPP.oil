#include "OpenCom.oil"

OS	ExampleOS {
	STATUS = EXTENDED;
	PRETASKHOOK = FALSE;
	POSTTASKHOOK = FALSE;
	STARTUPHOOK = TRUE;
	ERRORHOOK = TRUE;
	SHUTDOWNHOOK = FALSE;
	MEMMAP = FALSE;
	USERESSCHEDULER = FALSE;
};

COUNTER SystemTimer
{
	MAXALLOWEDVALUE = 0x7FFFFFFF;
	TICKSPERBASE = 1;
	MINCYCLE = 0;
	TYPE = SOFTWARE;
}

TASK TaskKeyMonitor 
{
	PRIORITY = 1;
	SCHEDULE = FULL;
	ACTIVATION = 1;
	AUTOSTART = TRUE 
	{
		APPMODE = OSDEFAULTAPPMODE;
	};
	STACK = 1024;
	TYPE = BASIC;
}

TASK TaskIdle  // Idle Task, always in running state
{
	PRIORITY = 0;
	SCHEDULE = FULL;
	ACTIVATION = 1;
	AUTOSTART = TRUE 
	{
		APPMODE = OSDEFAULTAPPMODE;
	};
	STACK = 1024;
	TYPE = BASIC;
}