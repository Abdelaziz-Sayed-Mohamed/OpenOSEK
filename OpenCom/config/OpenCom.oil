
TASK TaskNmMain
{
	PRIORITY = 2;
	SCHEDULE = NON;
	ACTIVATION = 1;
	AUTOSTART = FALSE;
	STACK = 1024;
	TYPE = BASIC;
}

TASK TaskNmInd{
	PRIORITY = 5;
	SCHEDULE = NON;
	ACTIVATION = 1;
	AUTOSTART = TRUE 
	{
		APPMODE = OSDEFAULTAPPMODE;
	};
	EVENT = EventNmNormal;
	EVENT = EventNmLimphome;
	EVENT = EventNmStatus;
	EVENT = EventRingData;
	STACK = 1024;
	TYPE = EXTENDED;
}

EVENT EventNmNormal
{
	MASK = AUTO;
};

EVENT EventNmLimphome
{
	MASK = AUTO;
};
EVENT EventNmStatus
{
	MASK = AUTO;
};

EVENT EventRingData
{
	MASK = AUTO;
}
ALARM AlarmNmMain {
	COUNTER = SystemTimer;
	ACTION = ACTIVATETASK {
		TASK = TaskNmMain;
	};
	AUTOSTART = TRUE {
		ALARMTIME = 10;
		CYCLETIME = 10;  //10 ms
		APPMODE = OSDEFAULTAPPMODE;
	}
};

